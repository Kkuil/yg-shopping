.cart .add_address {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 15rpx solid #ccc;
}
.cart .add_address .add_btn {
  width: 350rpx;
  font-size: 35rpx;
  font-weight: 400;
  border: 1rpx solid #ccc;
}
.cart .add_address .user_address {
  margin-left: -40rpx;
  font-size: 32rpx;
}
.cart .cart_title {
  display: inline-block;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 15rpx;
  font-weight: 500;
}
.cart .empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  color: #999490;
  font-size: 35rpx;
}
.cart .parkSymbol {
  width: 100%;
  height: 95rpx;
}
.cart .cart_goods {
  display: flex;
  flex-direction: column;
}
.cart .cart_goods .goods {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  height: 220rpx;
  padding: 10rpx;
  overflow: hidden;
}
.cart .cart_goods .goods .selected_goods {
  height: 50rpx;
  width: 50rpx;
  transform: scale(0.8);
  border-radius: 50%;
}
.cart .cart_goods .goods .img {
  width: 200rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
}
.cart .cart_goods .goods .intro_price_num {
  position: relative;
  width: 520rpx;
  height: 100%;
  margin-left: 15rpx;
}
.cart .cart_goods .goods .intro_price_num .introduction {
  position: absolute;
  top: 10rpx;
  font-size: 27rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart .cart_goods .goods .intro_price_num .price {
  position: absolute;
  bottom: 10rpx;
  color: var(--themeColor);
  font-weight: bold;
}
.cart .cart_goods .goods .intro_price_num .number {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 160rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.cart .cart_goods .goods .intro_price_num .number view {
  width: 45rpx;
  height: 45rpx;
  font-weight: bold;
  border: 1rpx solid #ccc;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .pay_tools {
  width: 100vw;
  position: fixed;
  bottom: 0;
  margin-bottom: 0;
  display: flex;
  justify-content: center;
  height: 95rpx;
  border-top: 1rpx solid #ccc;
  background-color: #fff;
}
.cart .pay_tools .cart_all_checked {
  flex: 0.4;
  padding: 17rpx 0;
  font-size: 38rpx;
}
.cart .pay_tools .cart_all_checked .all_checked {
  transform: scale(0.8);
}
.cart .pay_tools .pay_sum {
  width: auto;
  flex: 0.5;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  padding-right: 15rpx;
}
.cart .pay_tools .pay_sum .sum {
  font-size: 34rpx;
}
.cart .pay_tools .pay_sum .sum .price {
  color: var(--themeColor);
  font-weight: bold;
}
.cart .pay_tools .pay_sum .words {
  font-size: 28rpx;
  color: #999490;
}
.cart .pay_tools .paying {
  flex: 0.3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 35rpx;
  background-color: #ff0000;
}
