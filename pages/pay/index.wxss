.paying .user_address {
  margin: 20rpx;
  font-size: 32rpx;
}
.paying .title {
  font-size: 40rpx;
  padding: 20rpx;
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}
.paying .cart_goods {
  display: flex;
  flex-direction: column;
}
.paying .cart_goods .goods {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  height: 220rpx;
  padding: 10rpx;
  overflow: hidden;
}
.paying .cart_goods .goods .selected_goods {
  height: 50rpx;
  width: 50rpx;
  transform: scale(0.8);
  border-radius: 50%;
}
.paying .cart_goods .goods .img {
  width: 200rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
}
.paying .cart_goods .goods .intro_price_num {
  position: relative;
  width: 520rpx;
  height: 100%;
  margin-left: 15rpx;
}
.paying .cart_goods .goods .intro_price_num .introduction {
  position: absolute;
  top: 10rpx;
  font-size: 27rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.paying .cart_goods .goods .intro_price_num .price {
  position: absolute;
  bottom: 10rpx;
  color: var(--themeColor);
  font-weight: bold;
}
.paying .cart_goods .goods .intro_price_num .number {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 160rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.paying .cart_goods .goods .intro_price_num .number view {
  width: 45rpx;
  height: 45rpx;
  font-weight: bold;
  border: 1rpx solid #ccc;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.paying .pay_tools {
  width: 100vw;
  position: fixed;
  bottom: 0;
  margin-bottom: 0;
  display: flex;
  justify-content: center;
  height: 95rpx;
  border-top: 1rpx solid #ccc;
  background-color: #fff;
}
.paying .pay_tools .pay_sum {
  flex: 0.7;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  padding-right: 15rpx;
}
.paying .pay_tools .pay_sum .sum {
  font-size: 34rpx;
}
.paying .pay_tools .pay_sum .sum .price {
  color: var(--themeColor);
  font-weight: bold;
}
.paying .pay_tools .pay_sum .words {
  font-size: 28rpx;
  color: #999490;
}
.paying .pay_tools .paying {
  flex: 0.3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 35rpx;
  background-color: #ff0000;
}
