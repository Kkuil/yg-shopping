.search {
  width: 100vw;
  height: 100vh;
  background-color: #eee;
}
.search .searchInput {
  width: 100%;
  height: 100rpx;
  padding: 15rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
}
.search .searchInput .placeInput {
  padding-left: 0;
}
.search .searchInput input {
  width: 75%;
  height: 30rpx;
  border: 1rpx solid #ebe8e8;
  border-radius: 20rpx;
}
.search .searchInput .cancel {
  width: 28%;
  height: 80rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  background-color: #e7e2e2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search .history {
  width: 100vw;
  height: 100vh;
  padding: 20rpx;
}
.search .history .title {
  font-size: 30rpx;
  color: #777;
}
.search .history .historys {
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  flex-wrap: wrap;
}
.search .history .historys .empty {
  font-size: 32rpx;
  color: #777;
}
.search .history .historys .h {
  flex: 0.3;
  padding: 20rpx;
  color: #777;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search .result {
  width: 100%;
  height: cal(100vh - 100rpx);
  font-size: 32rpx;
}
.search .result .goods_description {
  width: 100vw;
  height: 70rpx;
  padding: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom: 1rpx solid #ccc;
}
